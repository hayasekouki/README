<div class="row mb-3" id="comment-form">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: comment, url: board_comments_path(board) do |f| %>
      <%= f.label :body, "コメント", class: "form-label" %>
      <%= f.text_area :body, class: "form-control mb-3", row: "4", placeholder: "コメント", required: true %>
      <%= f.submit "投稿", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
