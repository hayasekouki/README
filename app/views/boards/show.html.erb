<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <article class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-9">
              <h3 style="display: inline;"><%= @board.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@board.user.decorate.full_name}" %></li>
                <li class="list-inline-item"><%= @board.created_at.strftime("%Y年%m月%d日 %H:%M") %></li>
              </ul>
              <div class='d-flex justify-content-end'>
                <%= link_to "#", id: "button-edit-#{@board.id}", class: 'btn btn-outline-secondary btn-sm' do %>
                  <i class='bi bi-pencil-fill'></i>
                <% end %>
                <%= link_to "#", id: "button-delete-#{@board.id}", method: :delete, data: { confirm: '削除しますか？' }, class: 'btn btn-outline-danger btn-sm' do %>
                  <i class="bi bi-trash-fill"></i>
                <% end %>
              </div>
              </div>
            </div>
            <p><%= simple_format(@board.body) %></p>
          </div>
        </article>
      </div>
    </div>
    <%= render 'comments/form', comment: @comment, board: @board %>
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        <table class="table">
          <tbody id="table-comment">
            <%= render @comments %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>